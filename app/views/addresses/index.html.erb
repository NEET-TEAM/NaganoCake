<h2>配送先登録/一覧</h2>

<table>
  <tr>
    <%= form_with model:@address,local:true do |f| %> 
    <td>郵便番号(ハイフンなし)</td>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_area :address %></td>
  </tr>
  <tr>
    <td>宛名</td>
    <td><%= f.text_field :name %></td>
    <td><%= f.submit "新規登録" %></td>
    <% end %>
  </tr>
</table>

<table border="1">
  <tr>
    <th>郵便番号</th>
