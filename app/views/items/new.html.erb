<h2>商品新規登録</h2>
<%= form_with model: @item, local:true do |f| %>
  
  <div class="form-group">
    <%= f.label :商品画像 %>
    <%= f.attachment_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :商品説明 %>
    <%= f.text_area :caption %>
  </div>
  
  <div class="form-group">
    <%= f.label :ジャンル %>
  　<%# ジャンルのプルダウンを作成と設定　%> 
  </div>
  
  <div class="form-group">
    <%= f.label :税抜価格 %>
    <%= f.text_field :price %>円
  </div>
  
  <div class="form-group">
    <%= f.label :販売ステータス %>
    <%# <%= f.radio_button :%>
  </div>  
  
  
  
  
  <%= f.submit '新規登録' %>
<% end %>