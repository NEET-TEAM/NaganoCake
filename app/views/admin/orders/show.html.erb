<div class = "container">
  <div class = "row">

      <h4 class = "col-3 text-center" style = "background-color:lightgray">注文履歴一覧</h4>

  </div>


      <table class = "table table-borderless">
        <tr class = "row">
          <td class = "col-2"><strong>購入者</strong></td>
          <td class = "col"><%= @orders.customer_id.full_name %></td>
        </tr>
        <tr class = "row">
          <td class = "col-2"><strong>注文日</strong></td>
          <td class = "col"><%= @orders.created_at %></td>
        </tr>
        <tr class = "row">
          <td class = "col-2"><strong>配送先</strong></td>
          <td class = "col"><%= @orders.postal_code %> <%= @orders.address %></br><%= @orders.name %></td>
        </tr>
        <tr class = "row">
          <td class = "col-2"><strong>支払方法</strong></td>
          <td class = "col"><%= @orders.payment %></td>
        </tr>
        <tr class = "row">
          <%= form_with model:@orders, local:true do |f| %>
          <td class = "col-2"><strong>注文ステータス</strong></td>
          <td class = "col">
  f.select :order_satus
            <%= f.submit "更新", class: "btn btn-success" %>
            <% end %>
          </td>
        </tr>
      </table>


      <div class = "row">
        <div class = "col-8">
          <table class = "table table-hover">
             <thead class = "thead-light">
              <tr>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
                <th>制作ステータス</th>
              </tr>
            </thead>

            <%= form_with model:@oreder_histries, local:true do |f| %>
              <%= @orders_status.each do |order_histries| %>
                <tbody>
                  <tr>
                    <td><%= order_histries.item.name %></td>
                    <td><%= order_histries.item.price %></td>
                    <td><%= order_histries.quantity%></td>
                    <td><%= order_histries.item.price * order_histries.quantity %></td>
                    <td>
                      <%= f.collection_select :order_status, Order.order_status.keys.to_a %>
                      <%= f.submit "更新", class: "btn btn-success" %>
                    </td>
                  </tr>
                </tbody>
              <% end %>
              <%= f.submit "更新", class: "btn btn-success" %>
            <% end %>
          </table>
        </div>

        <div class = "col-1"></div>

        <div class = "col-3">
        <table class = "table table-borderless">
          <tr>
            <td><strong>商品合計</strong></td>
  <td><%= @order_histries.total_payment %></td>
          </tr>
          <tr>
            <td><strong>送料</strong></td>
            <td><%= @orders.shipping_cost %></td>
          </tr>
          <tr>
            <td><strong>請求金額合計</strong></td>
            <td><%= @order_histriew.total_payment %></td>
          </tr>
        </table>
        </div>
      </div>

</div>