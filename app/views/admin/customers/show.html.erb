<div class = "container o-8column">
  <div class = "row">
    <div class = "col-lg-5">
      <font color = "red"><%= flash[:notice] %></font>
      <h4><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h4>
      <table class = "table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
            <td></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %></td>
            <td><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %></td>
            <td><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
            <td></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
            <td></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
            <td></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
            <td></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td>
              <% if @customer.is_deleted == false %>
              <font color = "green"><strong>有効</strong></font>
              <% else %>
               <font color = "red"><strong>退会</strong></font>
              <% end %>
            </td>
            <td></td>
          </tr>
          <tr>
            <td><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %></td>
            <td>注文履歴一覧リンク</td>
            <td></td>
          </tr>
        <tbody>
      </table>
    </div>
  </div>
</div>