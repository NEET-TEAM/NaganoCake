<div class = "container o-8column">
  <div class = "row justify-content-center">
    <div class = "col">
      <h4>会員一覧</h4>
      <table class = "table table-striped">
        <thead class = "thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
         </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
          <tr></tr>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == false %>
              <font color = "green"><strong>有効</strong></font>
              <% else %>
              <font color = "red"><strong>退会</strong></font>
              <% end %>
            </td>
          </tr>
          <% end %>
          <%= paginate @customers %>
        </tbody>
      </tabel>
    </div>
  </div>
</div>