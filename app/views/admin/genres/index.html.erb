<div class="container">
<h4 class = "col-4 text-center" style = "background-color:lightgray">ジャンル一覧・追加</h4>
  <table>
    <tr>
    <%= form_with url:admin_genres_path, model:@genre, local:true do |f| %>
      <td>ジャンル名</td>
      <td><%= f.text_field :name %></td>
      <td><%= f.submit "新規登録", class: "btn btn-success" %></button></td>
    <% end %>
    </tr>
  </table>
  <div class="col-5">
    <table class="table">
      <thead class ="thead-light">
        <div class="row justify-content-center">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </div>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
   </table>
  </div>
  </div>

