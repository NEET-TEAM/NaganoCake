<div class="container">
  <div class="row mt-3">
    <h4 class = "text-center" style = "background-color:lightgray">ジャンル一覧・追加</h4>
  </div>
</div>
<div class="container">
  <div class="row my-3">
    <div class="col-5 my-4">
      <%= form_with url:admin_genres_path, model:@genre, local:true do |f| %>
      <table>
        <tr>
          <td>ジャンル名</td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></button></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="col-5">
    <table class="table">
      <thead class ="thead-light">
        <div class="row justify-content-center">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </div>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-outline-success" %></td>
          </tr>
        <% end %>
      </tbody>
      </table>
      </div>
    </div>


