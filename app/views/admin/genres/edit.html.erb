<div class="container">
  <h4 class = "col-2 text-center" style = "background-color:lightgray">ジャンル編集</h4>
  <%= form_with url:admin_genre_path, model: @genre, local:true do |f| %>
    <table>
      <tr>
        <td>ジャンル名</td>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
      </tr>
    </table>
  <% end %>
</div>
