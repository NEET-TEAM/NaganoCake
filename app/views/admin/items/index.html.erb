<h2>商品一覧</h2>
<div class="plusmark">
  <%= link_to image_tag('plusmark_icon.jpg', :size =>'25x25'), new_admin_item_path %>
</div>
  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.price %>円</td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.sold_out? %>
              <span>販売中</span>
            <% else %>
              <span>販売停止中</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>