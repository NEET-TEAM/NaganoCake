<h2>商品新規登録</h2>
  <div class="container">
    <%= form_with url:admin_items_path, model: @item, local:true do |f| %>

    <div class="form-group">
      <%= f.label :商品画像 %>
      <%= f.attachment_field :image %>
    </div>

    <div class="form-group">
      <%= f.label :商品名 %>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :商品説明 %>
      <%= f.text_area :explanation %>
    </div>

    <div class="form-group">
      <%= f.label :ジャンル %>
  　   <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank:"-- 選択してください --" %>
    </div>

    <div class="form-group">
      <%= f.label :税抜価格 %>
      <%= f.text_field :price %>円
    </div>

    <div class="form-group">
      <%= f.label :販売ステータス %>
      <div>
        <%= f.radio_button :sold_out, true %>
        <%= f.label :販売中 %>
        <%= f.radio_button :sold_out, false %>
        <%= f.label :販売停止中 %>
    </div>
    <%= f.submit '新規登録' %>
  <% end %>
  </div>
