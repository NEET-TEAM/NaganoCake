<h4>注文履歴一覧</h4>

  <table class="table">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <%= @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.address %></td>
        <td><%= order.item.name %></td>
        <td><%= order.total_payment %></td>
        <td><%= order.order_status %></td>
        <td><%= link_to "表示する", customer_orders_path(order), class: "btn btn-primary" %></td>
      </tr>
    </tbody>
  </table>