<div class="container">
<h2>注文履歴詳細</h2>
  <div>注文情報</div>
    <table class="table">
      <tbody>
        <%= @orders.each |order| do %>
         <tr>
           <td>注文日</td>
           <td><%= order.created_at %></td>
         </tr>
         <tr>
           <td>配送先</td>
           <td><%= order.address %></td>
         </tr>
         <tr>
           <td>支払方法</td>
           <td><%= order.payment %></td>
         </tr>
         <tr>
           <td>ステータス</td>
           <td><%= order_status %></td>
         </tr>
         <% end %>
      </tbody>
  </table>
  </div>