<div class="container">
  <div>
      <h2>注文情報確認</h2>
  </div>
  <div>
    <table>
      <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
      </thead>
      <tbody>
        <% sum = 0 %>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= attachment_image_tag cart_item.item, :image, format: "jpeg", fallback: "no_image.jpg", size: "100x100" %>
            <%= cart_item.item.name %>
          </td>
          <td>
            <%= cart_item.item.add_tax_price.to_s(:delimited) %>
          </td>
          <td>
            <%= cart_item.quantity %>
          </td>
          <td>
            <%= (cart_item.quantity * cart_item.item.price*1.1).round.to_s(:delimited) %>
          </td>
        </tr>
        <% sum += cart_item.quantity*cart_item.item.price*1.1 %>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div>
    <table>
      <tr>
        <td>配送料</td>
        <td><%= session[:order]["shipping_cost"].to_s(:delimited) %></td>
      </tr>
      <tr>
        <td>商品合計</td>
        <td><%= sum.round.to_s(:delimited) %></td>
      </tr>
      <tr>
        <td>請求金額</td>
        <td><%= session[:order]["total_payment"].to_s(:delimited) %></td>
      </tr>
    </table>
  </div>
  
  <div>
    <table>
      <tr>
        <td>支払い方法</td>
        <td>
          <% if session[:order]["payment"] == '銀行振込' %>
            <%= '銀行振込' %>
          <% else %>
            <%= 'クレジットカード' %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>お届け先</td>
        <td>〒
          <%= session[:order]["postal_code"] %><br>
          <%= session[:order]["address"] %><br>
          <%= session[:order]["name"] %>
        </td>
      </tr>
    </table>
  </div>
  <div>
    <%= link_to "注文を確定する", customer_orders_thanks_path, class: 'btn btn-outline-dark' %>
  </div>
</div>