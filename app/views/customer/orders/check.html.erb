<div class="container">
  <div class="row py-3 px-5">
      <h2 class="text-start design" style="background-color:lightgray">注文情報確認</h2>
  </div>
  <div class="row">
    <table class="col-8 table table-bordered">
      <thead>
          <tr>
            <th class="col-2">商品名</th>
            <th class="col-1">単価(税込)</th>
            <th class="col-1">数量</th>
            <th class="col-1">小計</th>
          </tr>
      </thead>
      <tbody>
        <% sum = 0 %>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= attachment_image_tag cart_item.item, :image, format: "jpeg", fallback: "no_image.jpg", size: "45x35" %>
            <%= cart_item.item.name %>
          </td>
          <td>
            <%= cart_item.item.add_tax_price.to_s(:delimited) %>
          </td>
          <td>
            <%= cart_item.quantity %>
          </td>
          <td>
            <%= (cart_item.quantity * cart_item.item.price*1.1).round.to_s(:delimited) %>
          </td>
        </tr>
        <% sum += cart_item.quantity*cart_item.item.price*1.1 %>
        <% end %>
      </tbody>
    </table>
  
  
  
    <table class="col-2 offset-sm-1 table table-bordered">
      <tr>
        <td>配送料</td>
        <td><%= session[:order]["shipping_cost"].to_s(:delimited) %></td>
      </tr>
      <tr>
        <td>商品合計</td>
        <td><%= sum.round.to_s(:delimited) %></td>
      </tr>
      <tr>
        <td>請求金額</td>
        <td><%= session[:order]["total_payment"].to_s(:delimited) %></td>
      </tr>
    </table>
  </div>
  
  <div>
    <table class="table table-borderless">
      <tr>
        <td>支払い方法</td>
        <td>
          <% if session[:order]["payment"] == '銀行振込' %>
            <%= '銀行振込' %>
          <% else %>
            <%= 'クレジットカード' %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>お届け先</td>
        <td>〒
          <%= session[:order]["postal_code"] %><span>  </span>
          <%= session[:order]["address"] %><br>
          <%= session[:order]["name"] %>
        </td>
      </tr>
    </table>
  </div>
  <div class="row py-3">
    <div class="col-12 text-center">
      <%= link_to "注文を確定する", customer_orders_thanks_path, class: 'btn btn-success btn-lg' %>
    </div>
  </div>
</div>