<div class = "container o-8column">
  <div class = "row">
    <div class = "col">
      <%= flash[:notice] %>
      <h4>マイページ</h4>
      <p><strong>登録情報</strong><%= link_to '編集する', edit_customer_path(@customer), class: "btn btn-success" %></p>
      <table class = "table table-bordered">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name + @customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メール</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <p>配送先一覧<%= link_to "一覧を見る", class: "btn btn-primary" %></p>
      <p>注文履歴一覧<%= link_to "一覧を見る", class: "btn btn-primary" %></p>
    </div>
  </div>
</div>