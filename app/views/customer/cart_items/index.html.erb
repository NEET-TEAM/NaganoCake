<h2>ショッピングカート</h2>
<div>
  <%= link_to "カートを空にする", destroy_all_customer_cart_items_path, method: :delete, class: "btn btn-outline-danger" %>
</div>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込み)</th>
      <th数量></th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <% sum = 0 %>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    
    <tr>
      <td>
        <%= attachment_image_tag cart_item.item, :image, format: "jpeg", fallback: "no_image.jpg", size: "100x100" %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.add_tax_price.to_s(:delimited) %>円</td>
      <%= form_with url:customer_cart_items_path, model: cart_item, local:true do |f| %>
      <td>
        <%= f.submit "変更",class: "btn btn-outline-dark" %>
      </td>
      <% end %>
      <td><%= (cart_item.quantity*cart_item.item.price*1.1).round.to_s(:delimited) %>円</td>
      <td><%= link_to "削除する", customer_cart_item_path(cart_item), method: :delete, class: "btn btn-outline-dark" %></td>
    </tr>

  </tbody>
  <% sum += cart_item.quantity*cart_item.item.price*1.1 %>
  <% end %>
</table>

<div>
  <%= link_to "買い物を続ける", customer_items_path, class: "btn btn-outline-dark" %>
</div>
<table>
  <tr>
    <th>合計金額</th>
    <th><%= sum.round.to_s(:delimited) %>円</th>
  </tr>
</table>

<div>
  
  <%= link_to "情報入力に進む", new_customer_order_path, class: "btn btn-outline-dark" %>
  
</div>