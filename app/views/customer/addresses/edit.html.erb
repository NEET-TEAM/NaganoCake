<h2>配送先編集</h2>
<%= form_with url:customer_address_path, model: @address, local:true do |f| %>
<table>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
        <td>宛名</td>
        <td><%= f.text_field:name %></td>
    </tr>
    <tr>
      <td><%= f.submit "更新する" %></td>
    </tr>
</table>
<% end %>