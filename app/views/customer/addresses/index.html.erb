<div class="container">
  <div class="row mt-5">
    <h2>配送先登録/一覧</h2>
  </div>

  <div class="container">
    <%= form_with url:customer_addresses_path, model: @address,local:true do |f| %>
    <div class="form-group row">
      <div class="col-sm-3"><%= f.label :郵便番号（ハイフンなし） %></div>
      <div class="col-sm-3"><%= f.text_field :postal_code, autofocus: true %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3"><%= f.label :住所 %></div>
      <div class="col-sm-3"><%= f.text_area :address %></div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3"><%= f.label :宛名 %></div>
      <div class="col-sm-3"><%= f.text_field :name %></div>
    </div>
    <div class="col-sm-2"><%= f.submit "新規登録" %></div>
    <% end %>
  </div>
  
  
            <table border="1">
              <thead>
                <tr>
                  <th>郵便番号</th>
                  <th>住所</th>
                  <th>宛名</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @addresses.each do |address| %>
                  <tr>
                    <td><%= address.postal_code %></td>
                    <td><%= address.address %></td>
                    <td><%= address.name %></td>
                    <td><%= link_to "編集する", edit_customer_address_path(address.id) %><%= link_to "削除する", customer_address_path(address.id), method: :delete %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

</div>