
<div class="container">
  <div class="col-md-3">
    <h4 class = "text-center" style = "background-color:lightgray">配送先登録/一覧</h4>
  </div>
  <div class="row">
    <div class="col-md-8">
    <%= form_with url:customer_addresses_path, model: @address, local:true do |f| %>
      <table class="table">
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code, autofocus: true %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, :size => "40" %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
  <div class="col-md-8">
            <table class="table table-bordered">
              <thead style= "thead-dark; font-weight: bold; background:#808080;">
                <tr>
                  <th class="text-center">郵便番号</th>
                  <th class="text-center">住所</th>
                  <th class="text-center">宛名</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @addresses.each do |address| %>
                  <tr>
                    <td class="align-middle"><%= address.postal_code %></td>
                    <td class="align-middle"><%= address.address %></td>
                    <td class="align-middle"><%= address.name %></td>
                    <td class="align-middle"><%= link_to "編集する", edit_customer_address_path(address.id), class: "btn btn-success" %>　　　　<%= link_to "削除する", customer_address_path(address.id), method: :delete, class: "btn btn-danger" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
  </div>
</div>