<div class="container">
  <h4 class = "col-3 text-center" style = "background-color:lightgray">商品一覧 (全<%= @items.count %>件)</h4>
  
      <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
          <div class="col-md-3">
            <div class="card">
            <div><%= attachment_image_tag(item, :image, :fill, 200, 180)%></div>
            <div><%= link_to item.name,customer_item_path(item) %></div>
            <div>￥<%= item.add_tax_price.to_s(:delimited)%></div>
            </div>
            </div>
          <% end %>
      </div>
  </div>