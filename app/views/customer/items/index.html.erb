<div class="container">
  <h4 class = "col-3 text-center" style = "background-color:lightgray">商品一覧 (全<%= @items.count %>件)</h4>

      <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
          <div class="col-md-3">
            <div class="card">
            <div class="col-xs-3" style="padding-right: 0px; padding-left: 0px;">
                    <%= link_to customer_item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
                      <%= attachment_image_tag item, :image, format: 'jpeg', size: "248x200"%><br>
                        <%= item.name %><br>
                        ¥<%= item.add_tax_price.to_s(:delimited, delimiter: ',') %>
                      <% end %>
                  </div>
            </div>
            </div>
          <% end %>
      </div>
  </div>