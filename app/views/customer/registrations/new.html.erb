<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :（姓） %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "氏名" %>
  </div>

  <div class="field">
    <%= f.label :（名） %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "氏名" %>
  </div>

  <div class="field">
    <%= f.label :（セイ） %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "フリガナ" %>
  </div>

  <div class="field">
    <%= f.label :（メイ） %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "フリガナ" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <span>(<%= @minimum_password_length %>文字以上)</span>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<div>既に登録済みの方</div>
<div><%= link_to "こちら", customer_session_path %>からログインしてください。</div>
