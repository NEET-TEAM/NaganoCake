<div class="container">
<h4 class = "col-2 text-center" style = "background-color:lightgray">新規会員登録</h4>
<table>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customer/shared/error_messages", resource: resource %>
    <tr>
      <td>名前</td>
      <td>（姓）</td>
      <td><%= f.text_field :last_name, autofocus: true, autocomplete: "氏名" %>   （名）   <%= f.text_field :first_name, autocomplete: "氏名" %></td>
     
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>（セイ）</td>
      <td><%= f.text_field :last_name_kana, autocomplete: "フリガナ" %>（メイ）<%= f.text_field :first_name_kana, autocomplete: "フリガナ" %></td>
     
      
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td></td>
      <td><%= f.email_field :email, autocomplete: "email" %></td>
    </tr>
    <tr>
      <td>郵便番号（ハイフンなし）</td>
      <td></td>
      <td><%= f.text_field :postal_code, class: "size-input-address", autocomplete: "郵便番号" %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td></td>
      <td><%= f.text_field :address, autocomplete: "住所" %></td>
    </tr>
    <tr>
      <td>電話番号（ハイフンなし）</td>
      <td></td>
      <td><%= f.text_field :phone_number, autocomplete: "電話番号"%></td>
    </tr>
  <tr>
    <td>パスワード(6文字以上)</td>
    <td></td>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
  </tr>

  <tr>
    <td>パスワード（確認用）</td>
    <td></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td><%= f.submit "新規登録", class: "btn btn-success sign_btn " %></td>
  </tr>
<% end %>
  
</table>

<h4 class = "col-3 text-center" style = "background-color:lightgray">既に登録済みの方</h4>
<div><%= link_to "こちら", customer_session_path %>からログインしてください。</div>

</div>

